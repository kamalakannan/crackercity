{
  "name": "crackercity",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass --output-style=expanded --source-map=true assets/scss/style.scss assets/css/style.css",
    "prefix": "npm run sass && postcss assets/css/style.css --use=autoprefixer --output=assets/css/style.css",
    "concat:js": "concat -o assets/js/scripts.js assets/js/_script.js assets/js/_custom.js",
    "uglify": "uglifyjs assets/js/scripts.js --compress sequences=true,conditionals=true --mangle --output assets/js/scripts.min.js",
    "build:css": "npm run sass && npm run prefix",
    "build:js": "npm run concat:js && npm run uglify",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "onchange 'assets/scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'assets/js/*.js' -- npm run build:js",
    "watch": "npm-run-all --parallel watch:*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "concat": "^1.0.3",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "uglify-js": "^3.17.0"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
